WindowManager:
    LoginScreen:
    SignUpScreen:
    MainPage:

<LoginScreen>:
    name: 'login'
    width: root.width
    height: root.height


    MDCard:
        size_hint: None, None
        size: 450, 600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 32
            halign: 'center'
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.signin()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.clear()

        MDRoundFlatButton:
            text: "Sign Up"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.signup()


        Widget:
            size_hint_y: None
            height: 10


<SignUpScreen>:
    name: 'SignUp'
    MDCard:
        size_hint: None, None
        size: 450, 600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: labels
            text: "Create your account"
            font_size: 32
            halign: 'center'
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: new_user
            hint_text: "create username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDTextField:
            id: new_password
            hint_text: "new password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            password: True

        MDTextField:
            id: new_password
            hint_text: "Retype password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Create"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.created()

<MainPage>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        MDBottomNavigation:
            title: 'nav bar'

            MDBottomNavigationItem:
                name: 'screen_1'
                text: 'speech-to-text'
                icon: 'headset'

                MDFloatingActionButton:
                    icon: "headset"
                    size_hint: None, None
                    size: "72dp", "72dp"
                    border_radius: [28]
                    pos_hint: {"center_x": 0.5, "center_y": 0.1}

                MDLabel:
                    id: output_label
                    text: ''
                    size_hint: (1,1)
                    halign: 'center'
                    font_size: 24
                    pos_hint: {'center_x':0.5,'center_y':0.5}


            MDBottomNavigationItem:
                name: 'screen_2'
                text: 'text-to-speech'
                icon: 'keyboard'


                MDTextField:
                    id: text_input
                    hint_text: 'Type anything...'
                    mode: "fill"
                    font_size: 18
                    active_color: 1,1,1,1
                    foreground_color: 1, 1, 1, 1
                    multiline: True
                    on_text: root.TextToSpeech(self, self.text[-1] == '\n')


                MDLabel:
                    id: output_label
                    text: ''
                    size_hint: (1,1)
                    halign: 'center'
                    font_size: 24
                    pos_hint: {'center_x':0.5,'center_y':0.5}



